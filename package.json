{
  "name": "nbb-anime-statistics",
  "version": "0.1.0",
  "description": "Anime Statistics per Season",
  "main": "app/processor/index.js",
  "author": "Lu√≠s Nabais <dextro@nabais.me>",
  "license": "MIT",
  "repository": "github:d3x7r0/anime-statistics",
  "engines": {
    "node": ">= 8.x"
  },
  "scripts": {
    "start": "node app/processor/index.js",
    "start:dev": "parcel --no-autoinstall app/client/index.html --out-dir target",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint ${ESLINT_OPTS} --ext .js --ext .jsx app",
    "lint:css": "stylelint app/**/*.css",
    "fix": "npm run fix:js && npm run fix:css",
    "fix:js": "eslint --fix --ext .js --ext .jsx app",
    "fix:css": "stylelint \"app/**/*.css\" --fix",
    "reload:couch": "node app/processor/reload_couch.js",
    "prebuild": "npm run clean",
    "build": "npm run build:data && npm run build:web",
    "build:web": "NODE_ENV=production parcel build --no-source-maps app/client/index.html --out-dir target",
    "build:data": "sh scripts/get_data.sh",
    "clean": "rm -rf target",
    "debug": "npm run start:dev"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  },
  "dependencies": {
    "@sukurapa/writer-couch": "^0.3.1",
    "@sukurapa/writer-csv": "^0.3.1",
    "nano": "^6.2.0",
    "node-fetch": "^2.6.0",
    "rc": "^1.2.8",
    "slugify": "^1.3.4",
    "sukurapa": "^0.3.2",
    "winston": "^2.2.0",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "chart.js": "^2.8.0",
    "eslint": "^6.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "parcel-bundler": "^1.12.3",
    "purecss": "^1.0.0",
    "randomcolor": "^0.5.4",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "whatwg-fetch": "^3.0.0"
  }
}
