{
  "name": "nbb-anime-statistics",
  "version": "0.0.1",
  "description": "Anime Statistics per Season",
  "main": "index.js",
  "author": "Lu√≠s Nabais <dextro@nonsensebb.com>",
  "license": "MIT",
  "engines": {
    "node": "~6.2.0"
  },
  "scripts": {
    "build": "./node_modules/.bin/grunt"
  },
  "dependencies": {
    "bluebird": "^3.4.0",
    "nano": "^6.2.0",
    "node-fetch": "^1.5.3",
    "npm": "^3.9.3",
    "rc": "^1.1.6",
    "slug": "^0.9.1",
    "xml2js": "^0.4.16"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-plugin-transform-es2015-modules-umd": "^6.8.0",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "chart.js": "^2.1.4",
    "grunt": "^1.0.1",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^1.0.1",
    "grunt-contrib-uglify": "^1.0.1",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-exec": "^0.4.7",
    "load-grunt-tasks": "^3.5.0",
    "purecss": "^0.6.0",
    "randomcolor": "^0.4.4",
    "whatwg-fetch": "^1.0.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "external-helpers",
      "transform-object-assign",
      [
        "transform-es2015-modules-umd",
        {
          "globals": {
            "bluebird": "Promise",
            "chart": "Chart",
            "randomcolor": "randomColor",
            "common": "webEs6Common",
            "files": "webEs6Files",
            "db": "webEs6Db"
          }
        }
      ]
    ],
    "moduleIds": true,
    "sourceMaps": true
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-console": 0,
      "no-unused-vars": 1,
      "quotes": [
        "warn",
        "double",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ]
    }
  }
}
