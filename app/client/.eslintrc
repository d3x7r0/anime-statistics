{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "modules": true
    }
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "warn",
      4,
      {
        "FunctionDeclaration": {
          "parameters": "first"
        }
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "warn",
      "always"
    ],
    "no-console": 0,
    "no-unused-vars": 1,
    "quotes": 0
  }
}
